<% if @user.errors.any? %>
<div class="flash-container">
	<p id="flash-error"><%= pluralize(@user.errors.count, "error") %> prohibited this form from being saved:</p>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
		<li class="flash-error-msg"><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<div class="row">
	<div class="span4"></div>

	<div class="span4" id="form-container">
		<h3>Create User</h3>

		<%= form_for @user, :html => {:multipart => true} do |form| %>
			<div class="field">
				<%= form.text_field :first_name, :placeholder => 'Enter your first name' %><br />
			</div>
			<div class="field">
				<%= form.text_field :last_name, :placeholder => 'Enter your last name' %>
			</div>
			<div class="field">
				<%= form.text_field :email, :placeholder => 'Enter your email' %>
			</div>	
			<div class="field">
				<%= form.file_field :avatar %>
			</div>	
			<div class="field">
				<%= form.password_field :password, :placeholder => 'Enter your password' %>
			</div>	
			<div class="field">
				<%= form.password_field :password_confirmation, :placeholder => 'Enter confirmation' %>
			</div>
			<div class="action">
				<%= form.submit "save", :class => "btn btn-default" %>
			</div>
		<% end %>
	</div>
	
	<div class="span4"></div>
</div>
