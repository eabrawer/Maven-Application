
<div class ="center">

	<h3>Create User</h3>

	<%= render :partial => "error" %>
	<%= form_for @user, :html => {:multipart => true} do |form| %>
		<div class="field">
			<%= form.text_field :first_name, :placeholder => 'Enter your first name' %><br />
		</div>
		<div class="field">
			<%= form.text_field :last_name, :placeholder => 'Enter your last name' %>
		</div>
		<div class="field">
			<%= form.text_field :email, :placeholder => 'Enter your email' %>
		</div>	
		<div class="field">
			<%= form.file_field :avatar %>
		</div>	
		<div class="field">
			<%= form.password_field :password, :placeholder => 'Enter your password' %>
		</div>	
		<div class="field">
			<%= form.password_field :password_confirmation, :placeholder => 'Enter confirmation' %>
		</div>
		<div class="field">
			<%= form.submit "save" %>
		</div>
	<% end %>
	<%= link_to "Essays", users_url %>
</div>
