<nav class="top-bar">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "Maven", projects_path %></a></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>
  <section class="top-bar-section">
    <ul class="left">
      <li class="divider"></li>
      <li><%= link_to "Projects", projects_path %></li>
      <li class="divider"></li>
      <% if current_user %>
        <li class="has-dropdown not-click">
          <a href="#"><%= current_user.email %></a>
          <ul class="dropdown">
            <li><%= link_to "Your Projects", my_projects_path %></li>
            <li><%= link_to "Your Profile", user_path(current_user) %></li>
            <li><%= link_to "Create an Essay", new_project_path %></li>
            <li><%= link_to "Delete User", @product, :confirm => "Are you sure you want to delete this user?", :method => :delete %> </li>
          </ul>
        </li>
        <li class="divider"></li>
      <% end %>
    </ul>
    <ul class="right">
      <li class="divider"></li>
      <% if current_user %>
        <li><%= link_to "Log out", session_path("current"), :method => :delete %></li>
      <% else %>
        <li class="has-dropdown">
          <a href="#">Are you a member?</a>
          <ul class="dropdown">
          <li><%= link_to "Log in", new_session_path %></li> 
          <li><%= link_to "Sign up", new_user_path %></li>
          </ul>
        </li>
      <% end %>
      <li class="divider"></li>
      <li class="has-form">
        <%= form_tag projects_path, :method => 'get' do %>
          <div class="row collapse">
            <div class="small-9 columns">
              <%= text_field_tag :search, params[:search], placeholder: "Search a tag" %>
            </div>
            <div class="small-3 columns">
              <%= submit_tag "Search", :name => nil, :class => "button" %>
            </div>
          </div>
        <% end %>
      </li>
      <li class="divider"></li>
    </ul>
  </section>
