<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <div class="navbar-header">
        <%= link_to "Maven", root_path, :class => "brand" %>
      </div>
      <div class="nav-collapse collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "Projects", projects_path %></li>
          <% if current_user %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %><b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Your Projects", my_projects_path %></li>
                <li><%= link_to "Your Profile", user_path(current_user) %></li>
                <li><%= link_to "Create an Essay", new_project_path %></li>
                <li><%= link_to "Delete User", user_path(current_user), :confirm => "Are you sure you want to delete this user?", :method => :delete %> </li>
              </ul>
            </li>
          <% end %>
        </ul>

        <%= form_tag projects_path, :method => 'get', :class => "navbar-form pull-right", :role => "search" do %>
          <%= text_field_tag :search, params[:search], :class => "form-control", placeholder: "Search a tag" %>
          <%= submit_tag "Search", :name => "search-tags", :class => "btn btn-default" %>
        <% end %>

        <ul class="nav navbar-nav pull-right">
          <% if current_user %>
            <li><%= link_to "Log out", session_path("current"), :method => :delete %></li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Are you a member? <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Log in", new_session_path %></li> 
                <li><%= link_to "Sign up", new_user_path %></li>
              </ul>
            </li>
          <% end %>
        </ul>
        
      </div>
    </div>
  </div>
</div>