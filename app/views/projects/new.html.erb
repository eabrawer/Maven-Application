<h1>Create a New Project</h1>

<%= form_for [@user, @project], :html => {:multipart => true} do |p| %>
  <div class="field">
    <%= p.label :title %><br />
    <%= p.text_field :title %>
  </div>
  <div class="field">
    <%= p.label "Upload Picture" %><br />
    <%= p.file_field :avatar %>
  </div>
  <br />
  <div class="field">
    <%= p.label :essay %><br />
    <%= p.text_area :essay %>
  </div>  

  <%= p.submit "save" %>
<% end %>

<%= link_to "back to projects", projects_url %>