<% @projects.each do |project| %>
	<div class="project row">
		<div class="project-image span3">
			<img src=<%= project.avatar_url(:thumb) %>>
		</div>

		<div class="project-info span9">
			<div class="row">
				<div class="project-title span12">
					<h2><%= link_to project.title, project %><h2>
				</div>
			</div>
			<div class="row">
				<div class="project-author span12">
					<p>By: <%= link_to project.user.first_name + " #{project.user.last_name}", project %></p>
				</div>
			</div>
			<div class="row">
				<div class="project-tags span12">
					<p>Tags: <%= raw project.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></p>
				</div>
				<div class="row">
					<div class="project-snipit span12"><p><%= project.essay[0..150] %></p></div>
				</div>
			</div>
		</div>
	</div>
<% end %>

<div id="paginate">
	<%= will_paginate @projects %>
</div>


