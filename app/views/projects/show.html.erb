<img src=<%= @project.avatar_url(:big_thumb) %>>
<p><%= @project.title %></p>

<p><%= @project.essay %></p>


      <% if @project.user != nil %>
        <em> by <%= @project.user.email %></em>
        Added on: <%= @project.created_at %>
      <% end %>
      <br />

<%= pluralize @project.reputation_for(:votes).to_i, "votes" %>
<%= link_to "up", vote_project_path(@project, type: "up"), method: "post" %>
<%= link_to "down", vote_project_path(@project, type: "down"), method: "post" %>
<br />
<br />


<% @project.comments.each do |comment| %>
	<% unless comment.new_record? %>
		<%= comment.text %>
		<%= pluralize comment.reputation_for(:votes).to_i, "votes" %>
		<%= link_to "up", vote_project_comment_path(@project, comment, type: "up"), method: "post" %>
		<%= link_to "down", vote_project_comment_path(@project, comment, type: "down"), method: "post" %>		
		<%= link_to " - Delete", "/projects/#{@project.id}/comments/#{comment.id}", :confirm => "Are you sure you want to delete this comment?", :method => :delete %><br />
	<% end %>
<% end %>



<%= render :partial => "commentform" %>

<%= link_to "Edit Project", edit_project_path %>
<%= link_to "Delete Project", @project, :confirm => "Are you sure you want to delete this user?", :method => :delete %>
<br />
<br />



