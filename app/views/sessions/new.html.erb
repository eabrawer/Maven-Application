<div class="row">
	<div class="span4"></div>
	
	<div class="span4">
		<div id="form-container">
			<h3>Log in</h3>
			<%= form_tag sessions_path do %>
			<div id="sessionsblock">
			  <div class="field">
			    <%= text_field_tag :email, nil, :placeholder => 'Enter your email' %>
			  </div>
			  <div class="field">
			    <%= password_field_tag :password, nil, :placeholder => 'Enter your password' %>
			  </div>
			  <div class="action"><%= submit_tag "Log in", :class => "btn btn-default" %></div>
			</div>
			<% end %>
		</div>
	</div>

	<div class="span4"></div>
</div>
